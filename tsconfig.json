{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",              // all source code lives in /src
    "outDir": "./dist",              // compiled JS output goes here

    /* === Module + Target === */
    "target": "ES2022",              // modern JS output
    "module": "NodeNext",            // use Node's native ESM system
    "moduleResolution": "NodeNext",  // required for NodeNext mode
    "lib": ["ES2022"],               // modern language features

    /* === Node Environment === */
    "types": ["node"],               // enables Node types
    "esModuleInterop": true,         // makes CJS imports smoother
    "resolveJsonModule": true,       // allow importing JSON configs

    /* === Output Options === */
    "sourceMap": true,               // generates .map files
    "declaration": true,             // generates .d.ts type files
    "declarationMap": true,          // link .d.ts to source maps
    "removeComments": false,

    /* === Type Safety === */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    /* === Module Style === */
    "verbatimModuleSyntax": true,    // keep import/export syntax as written
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",

    /* === JSX (if needed) === */
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
